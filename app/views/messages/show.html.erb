<div class="row">
  <div class="small-8 columns">
    <% @all_messages.each do |m| %>
      <div class="vcard small-12 columns">
        <strong>
          <% if m.sender == current_user %>
            <%= 'You said:'%>
          <% else %>
            <%= "#{m.sender.full_name} said:" %>
          <% end %>
        </strong>
        <br><br>
        <%= m.body %>
      </div>
    <% end %>
  </div>
</div>
<div class="row">
  <%= render 'new' %>
</div>
