<div class="small-12 columns">
  <div class="outer-background-block">
    <% @all_messages.each do |m| %>
      <div class="row message-wrapper">
        <% if m.sender == current_user %>
            <div class="small-8 columns sent_message">
              <%= m.body %>
            </div>
        <% else %>
            <div class="small-8 columns recived_massage small-offset-4">
              <div class="row">
                <div class="small-12 medium-2 columns"><%= image_tag m.sender.photo(:thumb), class: "profile_photo_thumb" %></div>
                <div class="small-12 medium-10 columns text-left"><%= m.body %></div>
              </div>
            </div>
        <% end %>
      </div>
    <% end %>
    <div class="row">
      <%= render 'new' %>
    </div>
  </div>
</div>
