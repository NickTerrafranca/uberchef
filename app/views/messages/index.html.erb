<div>
  <ul>
  <table>
    <thead>
      Inbox
      <tr>
      <th width="200">From</th>
      <th width="500">Message</th>
      </tr>
    </thead>
    <tbody>
      <% @received_messages.each do |m| %>
        <tr>
          <td><%=link_to "#{m.sender.first_name} #{m.sender.last_name}", message_path(m) %></td>
          <td><%= m.body %></td>
        </tr>
      <%end%>
    </tbody>
  </table>
</div>
