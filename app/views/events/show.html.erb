<div>
<h3><%=@event.title %></h3>
<ul class="vcard small-8 columns">
  <li>
    <strong>Event location</strong><br> <%="#{@event.address} #{@event.city}, #{@event.state}, #{@event.zip}"%>
  </li>

  <li>
    <strong>
      Event start time<br>
    </strong>
    <%=@event.start_time.strftime("%B %d at %I:%M %p") %>
  </li>


    <li>
      <strong>
        Event duration<br>
      </strong>
      <%=@event.duration%>
    </li>


  <li>
    <strong>
      Expected number of guests<br>
    </strong>
    <%=@event.guest_count %>
  </li>

  <li>
    <strong>
      Budget per person<br>
    </strong>
    $<%=@event.budget %>
  </li>

   <li>
     <strong>
      This events total bid price<br>
    </strong>
    $<%=@event.budget * @event.guest_count%>
  </li>

  <li>
    <strong>
      Event details<br>
    </strong>
    <%=@event.description %>
  </li>

  <li>
    <%= link_to "Contact this user with an offer", new_event_bid_path(@event) %>
  </li>

</ul>
</div>
