<div>
  <ul>
  <table>
  <thead>
    <tr>
      <th width="500">Description</th>
      <th width="200">Location</th>
      <th width="500">Start time</th>
      <th width="800">Details</th>
    </tr>
  </thead>

  <tbody>
  <% @event.each do |e| %>
    <% if e.start_time >= Date.today %>
      <tr>
        <td><%= link_to "#{e.title}", event_path(e) %></td>
        <td><%= "#{e.city}, #{ e.state}"%></td>
        <td><%= e.start_time.strftime("%B %d at %I:%M %p") %></td>
        <td><%= e.description %></td>
      </tr>
    <% end %>
  <% end %>

