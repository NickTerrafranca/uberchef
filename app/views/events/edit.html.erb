<h3>Edit Event Details</h3>
<%= form_for @event do |f| %>
  <%if @event.errors.any? %>
    <ul>
      <% @event.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="row">
    <div class="small-5 columns">
      <div>
        <%= f.label :title, 'Event title' %>
        <%= f.text_field :title, autofocus: true %>
      </div>

      <div>
        <%= f.label :address, 'Address' %>
        <%= f.text_field :address, autofocus: true %>
      </div>

      <div>
        <%= f.label :city, 'City' %>
        <%= f.text_field :city, autofocus: true %>
      </div>

      <div>
        <%= f.label :state, 'State' %>
        <%= f.text_field :state, autofocus: true %>
      </div>

      <div>
        <%= f.label :zip, 'Zip'%>
        <%= f.text_field :zip, autofocus: true, placeholder: "Zip" %>
      </div>

      <div>
        <%= f.label :pickadate_date, 'Event date' %>
        <%= f.text_field :pickadate_date, class: "datepicker"%>
      </div>

      <div>
      <%= f.label :pickadate_time, 'Start time' %>
        <%= f.text_field :pickadate_time, class: "timepicker" %>
      </div>

    </div>

    <div class="small-5 columns">
      <div>
      <!-- options to pass to select -->
        <%= f.select(:duration, options_for_select(['1 to 2 hours', '2 to 3 hours', '3 to 4 hours', '4 to 5 hours', '5 to 6 hours', '6 + hours']), autofocus: true, prompt: 'Approximate duration' ) %>
      </div>

      <div>
        <%= f.label :guest_count, 'Expected number of guests' %>
        <%= f.text_field :guest_count, autofocus: true, placeholder: 'Expected number of guests' %>
      </div>

      <div>
        <%= f.label :budget, 'Budget price per person' %>
        <%= f.text_field :budget, autofocus: true, placeholder: 'Budget price per person' %>
      </div>

      <div>
        <%= f.label :description, 'Event details' %>
        <%= f.text_area :description, placeholder: 'Event details', :cols => "20", :rows => "10" %>
      </div>

      <div>
        <%= f.submit "Submit", class: "button expand" %>
      </div>
      <div>
        <div><%= link_to "Back", :back %></div>
      </div>
    </div>
  </div>
<% end %>
