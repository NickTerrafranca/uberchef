 <h3><%=@event.title%></h3>
<ul>
  <li>
    Event location: <%="#{@event.address} #{@event.city}, #{@event.state}, #{@event.zip}"%>
  </li>

  <li>
    Event start time: <%=@event.start_time.strftime("%B %d at %I:%M %p") %>
  </li>

  <% if @event.end_time %>
    <li>
      Event end time: <%=@event.end_time.strftime("%B %d at %I:%M %p") %>
    </li>
  <% end %>

  <li>
    Expected number of guests: <%=@event.guest_count %>
  </li>

  <li>
    Budget per person: $<%=@event.budget %>
  </li>

   <li>
    This events total bid price: $<%=@event.budget * @event.guest_count%>
  </li>

  <li>
    Event details: <%=@event.description %>
  </li>
</ul>

<%= form_for [@event, @bid] do |f| %>
  <% if @bid.errors.any? %>
        <ul>
          <% @bid.errors.full_messages.each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
      <% end %>

  <div><%= f.label :message %><br>
  <%= f.text_area :message, autofocus: true, :cols => "20", :rows => "10" %></div>

  <div><%= f.label :amount, 'Bid amount' %><br>
  <%= f.text_field :amount, autofocus: true %></div>

  <div><%= f.submit "Submit" %></div>
<% end %>
