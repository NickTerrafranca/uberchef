<%= form_for [@event, @bid] do |f| %>
  <% if @bid.errors.any? %>
        <ul>
          <% @bid.errors.full_messages.each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
      <% end %>

  <!-- <%= @event.budget * @event.guest_count %> -->

  <div><%= f.label :message %><br>
  <%= f.text_area :message, autofocus: true, :cols => "20", :rows => "10" %></div>

  <div><%= f.label :amount, 'Bid amount' %><br>
  <%= f.text_field :amount, autofocus: true %></div>

  <div><%= f.submit "Submit" %></div>
<% end %>
