<div class="small-12 columns">
  <div class="outer-background-block">
    <h2>Create Account</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="row">
            <div class="small-12 medium-6 columns">
                <div><%= f.text_field :first_name, autofocus: true, placeholder: "First Name" %></div>

                <div><%= f.text_field :last_name, autofocus: true, placeholder: "Last Name" %></div>

                <div><%= f.text_field :address, autofocus: true, placeholder: "Address" %></div>

                <div><%= f.text_field :city, autofocus: true, placeholder: "City" %></div>


                <div><%= f.text_field :state, autofocus: true, placeholder: "State" %></div>


                <div><%= f.text_field :zip, autofocus: true, placeholder: "Postal Code" %></div>

                <div class="small-12 columns vcard photo-upload-field">
                <%= f.label 'Upload optional profile photo' %>
                <%= f.file_field :profile_photo %></div>

            </div>

            <div class="small-12 medium-6 columns">

                <div><%= f.text_area :about, autofocus: true, :cols => "10", :rows => "10", placeholder: "Short Description about you and/or your skills" %></div>

                <div><%= f.email_field :email, autofocus: true, placeholder: 'user@example.com', placeholder:"Email Address"  %></div>

                <div><%= f.password_field :password, autocomplete: "off",  placeholder: 'Password, minimum of 8 characters' %></div>


                <div><%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation" %></div>

                <%= f.submit "Sign up", class: "button [tiny small large]"%><br>
            </div>
        </div>
    <% end %>
</div>
