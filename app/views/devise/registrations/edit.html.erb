
<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <div class="row">
    <div class="small-6 columns">
      <div><%= f.label 'Upload optional profile photo' %>
      <%= f.file_field :profile_photo %></div>

      <div><%= f.label :address %><br />
      <%= f.text_field :address, autofocus: true %></div>

      <div><%= f.label :city %><br />
      <%= f.text_field :city, autofocus: true %></div>

      <div><%= f.label :state %><br />
      <%= f.text_field :state, autofocus: true %></div>

      <div><%= f.label :zip %><br />
      <%= f.text_field :zip, autofocus: true %></div>

      <div><%= f.label :about, 'Short Description about you and/or your skills' %><br />
      <%= f.text_area :about, autofocus: true, :cols => "10", :rows => "10" %></div>

      <div><%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, placeholder: 'Minimum of 8 characters' %></div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div><%= f.label :current_password %><br />
      <%= f.password_field :current_password, autocomplete: "off", placeholder: "Enter password to confirm your changes"%></div>

      <div><%= f.label :change_password %><br />
      <%= f.password_field :password, autocomplete: "off", placeholder: "Leave blank if you don't want to change it"%></div>

      <div><%= f.label :new_password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %></div>

      <div><%= f.submit "Update", class: "button [tiny small large]"  %></div><br>
      <%= link_to "Back", :back %>

    </div>
  </div>
<% end %>
<br>
<div class="row">
  <div class="small-6 columns vcard" >
    <h3>Cancel my account</h3>

    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "button [tiny small large]"  %></p>
  </div>
</div>
